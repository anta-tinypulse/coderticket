<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <%= flash_messages %>
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
    <ul class="nav navbar-nav">
      <% if signed_in %>
        <li class="nav-item">
          <a class="nav-link" href="<%= logout_path %>">Sign out</a>
        </li>
      <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= signup_path %>">Sign Up</a>
          </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= login_path %>">Log In</a>
        </li>
      <% end %>
    </ul>
  </nav>  

<%= yield %>

</body>
</html>
