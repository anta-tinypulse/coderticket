<div style='background-image: url(<%= image_path('background.png') %>)'>
  <div class="container" style="padding-top: 70px">
    <h3 class="text-center" style="color: #FFF">Create Ticket Type</h3>

    <p class="text-center" style="color: #FFF">Create ticket types for your event</p>

    <div class="row">
      <div class="col-md-4 col-md-offset-1" style="margin-top: 50px">
        <%= form_for [@event, TicketType.new] do |f| %>
            <div class="form-group" style="margin-top: 20px">
              <%= f.label 'name', style: 'color: #FFF' %>
              <%= f.text_field 'name', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'price', style: 'color: #FFF' %>
              <%= f.text_field 'price', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label 'max_quantity', style: 'color: #FFF' %>
              <%= f.text_field 'max_quantity', class: 'form-control' %>
            </div>
            <div class="form-group" style="margin-top: 20px">
              <%= f.submit 'Save', class: 'btn btn-info', style: 'margin-bottom: 160px' %>
            </div>
        <% end %>
      </div>
      <div class="col-md-5 col-md-offset-1" style="margin-top: 60px">
        <table class="table" style="background: rgba(255, 239, 225, 0.45)">
          <th> Ticket Type</th>
          <th> Unit Price</th>
          <th> Quantity</th>

          <% @event.ticket_types.each do |type| %>
            <tr>
              <td> <%= type.name %> </td>
              <td> <%= number_to_currency(type.price, unit: 'VND ', precision: 0) %> </td>
              <td> <%= type.max_quantity %></td>
            </tr>
          <% end %>
        </table>

        <div class="pull-right">
          <% if @event.status == "Draft" %>
            <%= link_to "/publish/#{@event.id}" do %>
              <button class='btn btn-danger'>Publish</button>
            <% end %>
          <% end %>
          <%= link_to root_path do %>
              <button class='btn btn-danger'>Cancel</button>
          <% end %>
        </div>
      </div>
    </div>

    <div style="margin: 20px 0 20px 0; color: white; font-size: 12px; text-align: center">
      Coder Ticket &reg; 2015. All rights reserved.
    </div>
  </div>
</div>