<div style='background-image: url(<%= image_path('background.png') %>)'>
  <div class="container" style="padding-top: 70px">
    <h3 class="text-center" style="color: #FFF">Edit Event</h3>

    <p class="text-center" style="color: #FFF">Update your event information in the form below</p>

    <div class="row">
      <%= form_for :event, url: event_path(@event), method: :patch do |f| %>
          <div class="row" style="margin: 30px 0 20px 0">
            <%= f.label 'name', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.text_field 'name', class: 'form-control' %>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 20px 0">
            <%= f.label 'description', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.text_area 'extended_html_description', rows: 4, class: 'form-control' %>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 20px 0">
            <%= f.label 'hero_image_url', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.text_field 'hero_image_url', class: 'form-control' %>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 20px 0">
            <%= f.label 'category', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.collection_select :category_id, Category.all, :id, :name, class: 'form-control' %>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 20px 0">
            <%= f.label 'venue', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.collection_select :venue_id, Venue.all, :id, :name, class: 'form-control' %>
              <button type="button" data-toggle="modal" data-target="#createVenueModal">New Venue</button>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 20px 0">
            <%= f.label 'start_date', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.date_select 'starts_at', class: 'form-control' %>
            </div>
          </div>
          <div class="row" style="margin: 20px 0 30px 0">
            <%= f.label 'end_date', class: 'control-label col-sm-2 col-sm-offset-3' %>
            <div class="col-sm-4">
              <%= f.date_select 'ends_at', class: 'form-control' %>
            </div>
          </div>
          <div class="row text-center" style="margin: 30px 0 30px 0">
            <%= f.submit 'OK', class: 'btn btn-info' %>
            <%= link_to 'Cancel', root_path, class: 'btn btn-info' %>
          </div>
      <% end %>
    </div>

    <div style="margin: 20px 0 20px 0; color: white; font-size: 12px; text-align: center">
      Coder Ticket &reg; 2015. All rights reserved.
    </div>
  </div>
</div>

<!-- Modal -->
<div id="createVenueModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">New Message</h4>
      </div>
      <div class="modal-body">
        <%= form_for(Venue.new) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :full_address %>
              <%= f.text_field :full_address, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :region_id %><br/>
              <%= f.collection_select :region_id, Region.all, :id, :name, class: 'form-control' %>
            </div>
            <div class="form-group text-center">
              <%= f.submit 'Send', class: 'btn btn-info' %>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>